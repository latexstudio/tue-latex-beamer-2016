%
%		Title 01
% 
\define@key{beamerframe}{title-01}[true]{%
  \setbeamertemplate{background}{%
	\includegraphics[width=\paperwidth,height=\paperheight,keepaspectratio]{backgrounds/cyan-title-01}
  }%
  %set fonts 
  \setbeamerfont{title}		{size=\huge,  family={\fontfamily{phv}},series=\bfseries}%
  \setbeamerfont{subtitle}	{size=\large, family={\fontfamily{phv}},series=\bfseries}%
  \setbeamerfont{author}	{size=\normalsize, family={\fontfamily{phv}},series=\slshape}%
  %\setbeamerfont{institute}	{size=\large, family={\fontfamily{phv}},series=\bfseries}%
  \setbeamerfont{date}		{size=\normalsize, family={\fontfamily{phv}},series=\slshape}%
  %define font colors
  \setbeamercolor{title}{fg=white}%  
  %position elements on the page
  \begin{textblock}{5.12992}(0.38808,2.27304)
	  \usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle
  \end{textblock}
  \begin{textblock}{4.51}(0.38808,5.15088)
  	{\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle}\par
  	\bigskip
  	\usebeamerfont{author}\insertauthor\par
  	%\usebeamerfont{institute}\insertinstitute\par
  	\usebeamerfont{date}\insertdate\par
  \end{textblock}  
}

